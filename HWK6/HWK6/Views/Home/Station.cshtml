@{
    ViewData["Title"] = "View Orders Page";
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Pick your station!</h1>
            <p class="lead fw-normal text-white-50 mb-0">select the station to see orders</p>
        </div>
    </div>
</header>

<div class="container py-5">
    <div class="p-5 rounded shadow mb-5">
        <!-- Lined tabs-->
        <ul id="myTab2" role="tablist" class="nav nav-tabs nav-pills with-arrow lined flex-column flex-sm-row text-center">
            <li class="nav-item flex-sm-fill">
                <a id="home2-tab" data-toggle="tab" href="#home2" role="tab" aria-controls="home2" aria-selected="true" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0 active">Drinks Station</a>
            </li>
            <li class="nav-item flex-sm-fill">
                <a id="profile2-tab" data-toggle="tab" href="#profile2" role="tab" aria-controls="profile2" aria-selected="false" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0">Kitchen Station</a>
            </li>
            <li class="nav-item flex-sm-fill">
                <a id="contact2-tab" data-toggle="tab" href="#contact2" role="tab" aria-controls="contact2" aria-selected="false" class="nav-link text-uppercase font-weight-bold rounded-0">Dessert Station</a>
            </li>
        </ul>
        <div id="myTab2Content" class="tab-content">
            <div id="home2" role="tabpanel" aria-labelledby="home-tab" class="tab-pane fade px-4 py-5 show active">
                <p class="leade font-italic">
                </p>
                <p class="leade font-italic mb-0">
                </p>
            </div>
            <div id="profile2" role="tabpanel" aria-labelledby="profile-tab" class="tab-pane fade px-4 py-5">
                <p class="leade font-italic">
                </p>
                <p class="leade font-italic mb-0">
                </p>
            </div>
            <div id="contact2" role="tabpanel" aria-labelledby="contact-tab" class="tab-pane fade px-4 py-5">
                <p class="leade font-italic">
                </p>
                <p class="leade font-italic mb-0">
                </p>
            </div>
        </div>
        <!-- End lined tabs -->
    </div>

</div>


<div class="modal" id="confirmationModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure the item has been completed?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmButton">Confirm</button>
            </div>
        </div>
    </div>
</div>


